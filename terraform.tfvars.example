# Proxmox Configuration
proxmox_node          = "pve"
proxmox_api_url       = "https://your-proxmox-server:8006/api2/json"
proxmox_api_token_id  = "your-token-id"
proxmox_api_token_secret = "your-token-secret"
proxmox_tls_insecure = true

# Ubuntu Template Configuration
ubuntu_template_config = {
  vm_id              = 9001
  storage_pool       = "local-lvm"
  network_bridge     = "vmbr0"
  cores              = 2
  memory             = 2048
  disk_size          = "20G"
  cloud_init_storage = "local-lvm"
}

# Ubuntu Image Configuration
ubuntu_image_config = {
  version             = "22.04"
  architecture        = "amd64"
  interactive_replace = true
}

# Control Plane Nodes (Masters)
# Default: 4 vCPU, 8GB RAM, 50G disk
control_plane_nodes = {
  "master-1" = {
    vmid     = 100
    hostname = "k8s-master-1"
    ip       = "192.168.1.10/24"
    gateway  = "192.168.1.1"
    # Optional overrides:
    # cores    = 4
    # memory   = 8192
    # disk_size = "50G"
  }
  "master-2" = {
    vmid     = 101
    hostname = "k8s-master-2"
    ip       = "192.168.1.11/24"
    gateway  = "192.168.1.1"
  }
  "master-3" = {
    vmid     = 102
    hostname = "k8s-master-3"
    ip       = "192.168.1.12/24"
    gateway  = "192.168.1.1"
  }
}

# Worker Nodes
# Default: 8 vCPU, 16GB RAM, 100G disk
worker_nodes = {
  "worker-1" = {
    vmid     = 110
    hostname = "k8s-worker-1"
    ip       = "192.168.1.20/24"
    gateway  = "192.168.1.1"
    # Optional overrides:
    # cores    = 8
    # memory   = 16384
    # disk_size = "100G"
  }
  "worker-2" = {
    vmid     = 111
    hostname = "k8s-worker-2"
    ip       = "192.168.1.21/24"
    gateway  = "192.168.1.1"
  }
  "worker-3" = {
    vmid     = 112
    hostname = "k8s-worker-3"
    ip       = "192.168.1.22/24"
    gateway  = "192.168.1.1"
  }
}

# Resource Defaults for Control Plane
control_plane_defaults = {
  cores     = 4
  memory    = 8192   # 8GB in MB
  disk_size = "50G"
}

# Resource Defaults for Workers
worker_defaults = {
  cores     = 8
  memory    = 16384  # 16GB in MB
  disk_size = "100G"
}

# SSH Configuration
ssh_public_keys = [
  # "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAACAQC... user@host",
]

# Optional: SSH password for ubuntu user (use SSH keys instead if possible)
# ssh_password = "your-secure-password"
}

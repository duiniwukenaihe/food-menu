# =============================================================================
# Proxmox Configuration
# =============================================================================

# Proxmox API URL (required)
proxmox_api_url = "https://192.168.0.200:8006/api2/json"

# Proxmox username (required if not using API token)
proxmox_user = "root@pam"

# Proxmox password (required if not using API token, can use env var PROXMOX_VE_PASSWORD)
proxmox_password = "your_password_here"

# Proxmox node name where VMs will be created
proxmox_node = "proxmox1"

# Proxmox host IP for SSH operations
proxmox_host = "192.168.0.200"

# SSH user for Proxmox host operations
proxmox_ssh_user = "root"

# Path to SSH private key for Proxmox host access
proxmox_ssh_key = "~/.ssh/id_rsa"

# =============================================================================
# Image and Template Configuration
# =============================================================================

# Ubuntu cloud image URL
image_url = "https://cloud-images.ubuntu.com/jammy/current/jammy-server-cloudimg-amd64.img"

# Ubuntu cloud image base URL
image_base_url = "https://cloud-images.ubuntu.com/jammy/current"

# Image filename
image_name = "jammy-server-cloudimg-amd64.img"

# VM template ID (must be unique in Proxmox)
template_id = 9001

# Proxmox storage pool for VM disks
storage = "local"

# Network bridge for VM network interfaces
bridge = "vmbr0"

# =============================================================================
# User Configuration
# =============================================================================

# Default username for VM instances
username = "ubuntu"

# Default password for VM instances
password = "your_vm_password_here"

# Path to SSH private key for VM access
ssh_private_key_path = "~/.ssh/id_rsa"

# Path to SSH public key for VM access
ssh_public_key_path = "~/.ssh/id_rsa.pub"

# =============================================================================
# Master Node Configuration
# =============================================================================

# Number of master nodes (1-3 recommended for production)
master_count = 1

# Starting VM ID for master nodes (100-499 range)
master_vmid_start = 501

# CPU cores per master node
master_cores = 4

# Memory in MB per master node
master_memory = 8192

# Disk size per master node
master_disk_size = "50G"

# =============================================================================
# Worker Node Configuration
# =============================================================================

# Number of worker nodes
worker_count = 2

# Starting VM ID for worker nodes (500-999 range)
worker_vmid_start = 601

# CPU cores per worker node
worker_cores = 8

# Memory in MB per worker node
worker_memory = 16384

# Disk size per worker node
worker_disk_size = "100G"

# =============================================================================
# Kubernetes Configuration
# =============================================================================

# Kubernetes version to install
k8s_version = "1.30.0"

# Pod network CIDR for Kubernetes
pod_network_cidr = "10.244.0.0/16"

# Network plugin (flannel, cilium, calico)
network_plugin = "flannel"

# Container image repository for Kubernetes
image_repository = "registry.aliyuncs.com/google_containers"

# =============================================================================
# Optional Configuration
# =============================================================================

# Cluster name
cluster_name = "k8s-cluster"

# Environment (dev, staging, prod)
environment = "dev"

# API Token (alternative to username/password)
# proxmox_api_token_id = "user@realm!tokenid"
# proxmox_api_token_secret = "your_token_secret_here"

# Skip TLS verification (for self-signed certificates)
proxmox_insecure = true